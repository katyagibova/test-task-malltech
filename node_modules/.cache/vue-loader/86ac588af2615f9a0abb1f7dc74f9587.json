v>\n          <div class=\"empty_arrow\" v-else></div>\n        </div>\n        <div class=\"description\" id=\"description\" @scroll=\"handleScroll\">\n          {{information.description}}\n        </div>\n        <div class=\"arrow\">\n          <div class=\"description_shadow_bottom\" v-if=\"showBottom\"></div>\n          <img src=\"../../assets/icons/top-bottom-arrow.svg\" alt=\"\" style=\"transform: rotate(180deg); cursor: pointer\" v-if=\"showBottom\" @click=\"scrollBottom\">\n          <div class=\"empty_arrow\" v-else></div>\n        </div>\n        \n      </div>\n    </div>\n    <div class=\"inner_wrapper__assets\">\n      <div>\n        <app-video-carousel :items=\"videos\" />\n      </div>\n      <div class=\"photo\">\n        <app-carousel :items=\"photos\" :photosLarge=\"photosLarge\" />\n      </div>\n    </div>\n  </div>\n</div>\n</template>\n\n<script>\nimport { infoRU, infoEN } from './data.js'\nimport AppCarousel from '../AppUnit/AppCarousel.vue'\nimport AppVideoCarousel from '../AppUnit/AppVideoCarousel.vue'\nimport { mapGetters, mapActions } from \"vuex\";\n\nexport default {\n  name: 'NamesBookInfo',\n  components: {\n    AppCarousel,\n    AppVideoCarousel\n  },\n  data(){\n    return {\n      information: null,\n      photos: [],\n      photosLarge: [],\n      videos: [],\n      showTop: false,\n      showBottom: true\n    }\n  },\n  watch:{\n    'PAGE_LANG'(val){\n      window.scrollTo({\n        top: 0,\n        behavior: 'smooth'\n      });\n      const id = this.$route.query.id\n      const lang = val\n      const data = lang === 'ru' ? infoRU : infoEN\n      data.forEach(item => {\n        if(item.id == id) {\n          this.information = item\n          this.photos = item.photos\n          this.photosLarge = item.photosLarge\n          this.videos = item.videos\n        }\n      })\n    }\n  },\n  created(){\n    window.scrollTo({\n      top: 0,\n      behavior: 'smooth'\n    });\n    const id = this.$route.query.id\n    const lang = this.PAGE_LANG\n    const data = lang === 'ru' ? infoRU : infoEN\n    data.forEach(item => {\n      if(item.id == id) {\n        this.information = item\n        this.photos = item.photos\n        this.photosLarge = item.photosLarge\n        this.videos = item.videos\n      }\n    })\n  },\n  computed: {\n    ...mapGetters([\"PAGE_LANG\"]),\n  },\n  methods: {\n    ...mapActions([\"CHANGE_SCREENSAVER_STATE\"]),\n\n    updateScreenSaver(){\n      this.CHANGE_SCREENSAVER_STATE(true)\n    },\n\n    handleScroll(){\n      const elem = document.getElementById('description')\n\n      if(elem.scrollTop > 50) {\n        this.showTop = true\n      } else {\n        this.showTop = false\n      }\n\n      const bottom = elem.scrollHeight - 50 - elem.clientHeight\n\n      if(elem.scrollTop > bottom) {\n        this.showBottom = false\n      } else {\n        this.showBottom = true\n      }\n    },\n    scrollTop(){\n      const elem = document.getElementById('description')\n      let num = elem.scrollTop - 200\n      if (num < 0) {\n        num = 0\n      }\n      elem.scrollTo({\n        top: num,\n        behavior: 'smooth'\n      });\n    },\n    scrollBottom(){\n      const elem = document.getElementById('description')\n      let num = elem.scrollTop + 200\n      if (num > elem.scrollHeight) {\n        num = elem.scrollHeight\n      }\n      elem.scrollTo({\n        top: num,\n        behavior: 'smooth'\n      });\n    },\n  },\n}\n</script>\n\n<style scoped>\n.wrapper{\n  background-color: #000;\n  padding: 90px 0 82px;\n  height: 908px;\n}\n\n.inner_wrapper{\n  display: flex;\n  justify-content: space-between;\n  max-width: 1705px;\n  margin: 0 auto;\n  color: #fff;\n}\n\n.inner_wrapper__info{\n  max-width: 695px;\n}\n\n.header{\n  font-style: normal;\n  font-weight: 500;\n  font-size: 39px;\n  line-height: 47px;\n  margin-bottom: 6px;\n}\n\n.divider{\n  background: #535353;\n  height: 2px;\n  width: 100%;\n}\n\n.arrow{\n  display: flex;\n  justify-content: center;\n  position: relative;\n}\n\n.empty_arrow{\n  height: 17px;\n}\n\n.description{\n  font-style: normal;\n  font-weight: 500;\n  font-size: 24px;\n  line-height: 29px;\n  color: #E9E9E9;\n  white-space: pre-line;\n  overflow-y: auto;\n  height: 726px;\n}\n\n.description::-webkit-scrollbar {\n  width: 0;\n}\n\n.description_shadow_bottom{\n  position: absolute;\n  bottom: 0;\n  left: 0;\n  height: 70px;\n  width: 100%;\n  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000 100%);\n}\n\n.description_shadow_top{\n  position: absolute;\n  top: 17px;\n  left: 0;\n  height: 70px;\n  width: 100%;\n  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000 100%);\n  transform: matrix(1, 0, 0, -1, 0, 0);\n}\n\n.photo{\n  margin-top: 55px;\n}\n</style>\n"]}]}